generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         String  @id @default(uuid()) // Matches Supabase Auth UID
  email      String  @unique
  name       String?
  avatar_url String?
  creation   Creations[]
  createdAt  DateTime @default(now())
}

model Creations {
  id          String    @id @default(uuid())
  imageUrl    String?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}
